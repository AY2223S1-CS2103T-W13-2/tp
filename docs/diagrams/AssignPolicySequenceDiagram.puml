@startuml
!include style.puml

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant ":AddressBookParser" as AddressBookParser LOGIC_COLOR
participant "PolicyAssignCommandParser" as PolicyAssignCommandParser LOGIC_COLOR
participant "pac:PolicyAssignCommand" as PolicyAssignCommand LOGIC_COLOR
participant "CommandResult" as CommandResult LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant "personToAdd:Person" as Person MODEL_COLOR
participant ":Model" as Model MODEL_COLOR
end box

[-> LogicManager : execute(assign 1 1 \npr/200 sd/2020-10-12 \ned/2022-10-12)
activate LogicManager

LogicManager -> AddressBookParser : parseCommand(assign 1 1 \npr/200 sd/2020-10-12 \ned/2022-10-12)
activate AddressBookParser

create PolicyAssignCommandParser
AddressBookParser -> PolicyAssignCommandParser :
activate PolicyAssignCommandParser

PolicyAssignCommandParser --> AddressBookParser
deactivate PolicyAssignCommandParser

AddressBookParser --> PolicyAssignCommandParser: parse(assign 1 1 \npr/200 sd/2020-10-12 \ned/2022-10-12)
activate PolicyAssignCommandParser

create PolicyAssignCommand
PolicyAssignCommandParser -> PolicyAssignCommand :
activate PolicyAssignCommand

PolicyAssignCommand --> PolicyAssignCommandParser : pac
deactivate PolicyAssignCommand

PolicyAssignCommandParser --> AddressBookParser :pac
destroy PolicyAssignCommandParser

AddressBookParser --> LogicManager : pac
deactivate AddressBookParser

LogicManager -> PolicyAssignCommand : execute(model)
activate PolicyAssignCommand

PolicyAssignCommand -> Model : getFilteredPersonList()
activate Model

Model --> PolicyAssignCommand : lastShownPersonList

PolicyAssignCommand -> Model : get(0)
Model --> PolicyAssignCommand: personToAdd
deactivate Model

PolicyAssignCommand -> Model : getFilteredPolicyList()
activate Model

Model --> PolicyAssignCommand : lastShownPolicyList

PolicyAssignCommand -> Model : get(0)
Model --> PolicyAssignCommand: policyToAdd
deactivate Model

PolicyAssignCommand -> Person:addPolicy(new AssignedPolicy \npolicyToAdd, 200, 2020-10-12 \n2022-10-12 )
activate Person
Person --> PolicyAssignCommand
deactivate Person

create CommandResult
PolicyAssignCommand -> CommandResult
activate CommandResult

CommandResult --> PolicyAssignCommand
deactivate CommandResult

PolicyAssignCommand --> LogicManager : result
deactivate PolicyAssignCommand
PolicyAssignCommand -[hidden]-> LogicManager : result


[<--LogicManager
deactivate LogicManager
@enduml
